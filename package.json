{
  "name": "express-otel-boilerplate",
  "version": "1.0.0",
  "description": "This is a boilerplate for instrumentation using node + express service written using typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "start:service2": "cross-env PORT=8081 SERVICE_NAME=service2 node dist/service2.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opentelemetry/auto-instrumentations-node": "^0.57.0",
    "@opentelemetry/instrumentation-winston": "^0.45.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "opentelemetry-instrumentation-express": "^0.41.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
